{
  "name": "mcp-api-toolkit",
  "version": "0.1.0",
  "description": "Comprehensive API development and testing MCP server - OpenAPI, testing, SDK generation, and more",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-api-toolkit": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepare": "npm run build",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "api",
    "openapi",
    "swagger",
    "testing",
    "sdk",
    "postman",
    "api-first",
    "claude",
    "ai",
    "development-tools"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mcp-api-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/mcp-api-toolkit/issues"
  },
  "homepage": "https://github.com/yourusername/mcp-api-toolkit#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.9",
    "openapi-typescript": "^7.4.4",
    "swagger-parser": "^10.0.3",
    "yaml": "^2.6.1",
    "zod": "^3.24.1",
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/markdown-it": "^14.1.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
